<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/backgroundGradient">

    <!-- Title Section -->
    <TextView
        android:id="@+id/textViewEnrollment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Enrollment"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/title_color"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divider_color"
        android:layout_marginBottom="16dp" />

    <!-- Course Selection Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/section_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/selectCoursesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Courses:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/section_title_color"
            android:paddingBottom="8dp" />

        <!-- Dynamic Checkboxes for Course Selection -->
        <LinearLayout
            android:id="@+id/checkBoxContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:textColor="@color/defaultColor">
            <!-- Dynamically populated checkboxes will be added here -->
        </LinearLayout>

    </LinearLayout>

    <!-- Submit Button Section -->
    <Button
        android:id="@+id/buttonSubmitEnrollment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Enrollment"
        android:textSize="16sp"
        android:layout_marginTop="24dp" />

</LinearLayout>
